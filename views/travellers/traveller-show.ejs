<div class="level">
  <h1 class="level-item has-text-centered title is-2"><%= traveller.firstname %> <%= traveller.lastname %> has visited these places:</h1>
</div>

<div class="task-container columns is-multiline">
  <% traveller.cities.forEach((place)=>{ %>
    <div class="card column is-three">
      <div class="card-content">
        <p class="subtitle"><%= place.city %></p> 
      </div>
      <footer class="card-footer">
        <form action="association/?_method=DELETE" method="POST">
          <input type="hidden" name="cityId" value="<%= place.id %>">
          <input type="hidden" name="travellerId" value="<%= traveller.id %>">
          <button type="submit" class="button is-danger is-outlined">
            <span>Delete</span>
            <span class="icon is-small">
              <i class="fas fa-times"></i>
            </span>
          </button>
        </form>
      </footer>
    </div>
    <% }) %>
</div>

<div class="level">
  <% include ../partials/map.ejs %>
</div>